{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "sourceMap": false,
    "lib": [
      "esnext"
    ],
    "outDir": "dist",
    "noEmitOnError": true,
    "declaration": true,
    "declarationDir": "bundle-tsd/declarations"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}