{
  "name": "@typeonly/validator-cli",
  "version": "1.0.0",
  "description": "A CLI to validate JSON files, using TypeScript typing definitions.",
  "author": "Paroi",
  "type": "module",
  "scripts": {
    "prepublishOnly": "npm run build",
    "clear": "rimraf dist/*",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "build": "npm run clear && npm run tsc",
    "lint": "biome check . --json-formatter-enabled=false --organize-imports-enabled=false"
  },
  "dependencies": {
    "@typeonly/validator": "^1.0.0",
    "command-line-args": "^6.0.1",
    "command-line-usage": "^7.0.3",
    "typeonly": "^1.0.0"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.2.3",
    "@types/command-line-usage": "^5.0.4",
    "@types/node": "22",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3"
  },
  "bin": "dist/cli.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paroi-tech/typeonly.git"
  },
  "homepage": "https://github.com/paroi-tech/typeonly/tree/master/validator-cli",
  "license": "CC0-1.0",
  "keywords": [
    "typescript",
    "json",
    "validation"
  ]
}
