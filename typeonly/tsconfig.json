{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "sourceMap": false,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "outDir": "dist",
    "noEmitOnError": true,
    "declaration": true,
    "declarationDir": "scripts/declarations",
    "allowJs": true,
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "include": [
    "src",
  ]
}